<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_grey_light"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/find"
            android:textColor="@color/bottom_text_color_normal"
            android:textSize="18sp" />
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_find1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_bar"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/jack_margin_double"
            android:drawableLeft="@drawable/find_huodong"
            android:drawablePadding="@dimen/jack_margin"
            android:gravity="center_vertical"
            android:text="活动" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" >

            <LinearLayout
                android:id="@+id/layout_tabtab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@id/img_tab"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                     />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_countchat"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/layout_tabtab"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_count_int_tab"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/selector_tab_textcolor"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_find2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_bar"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/jack_margin_double"
            android:drawableLeft="@drawable/find_px"
            android:drawablePadding="@dimen/jack_margin"
            android:gravity="center_vertical"
            android:text="拼箱" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_find3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_bar"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/jack_margin_double"
            android:drawableLeft="@drawable/find_putaojiuxueyuan"
            android:drawablePadding="@dimen/jack_margin"
            android:gravity="center_vertical"
            android:text="葡萄酒学院" />
    </LinearLayout>

</LinearLayout>