<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
    android:padding="@dimen/jack_margin_double"
    >
    <TextView 
        android:id="@+id/tv_ad_enrollstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已报名"
        />
    <GridView 
        android:id="@+id/grid_ad_enroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        >
    </GridView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/jack_margin"
        android:layout_marginTop="@dimen/jack_margin_double"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒单（5）"
            android:textColor="@android:color/black"
            />
        <Button 
            android:id="@+id/btn_ad_wines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒单"
            />
    </LinearLayout>
    <ListView 
        android:id="@+id/list_ad_wines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>

</LinearLayout>
