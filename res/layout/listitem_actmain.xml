<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        
        <ImageView 
            android:id="@+id/img_itm_am_bigbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:color/white"
            />
        <TextView 
            android:id="@+id/tv_item_am_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/common_grey_light"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="杭州"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/jack_margin"
            android:background="#a000"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <ImageView 
                android:id="@+id/img_item_am_smallicon"
                android:layout_width="@dimen/sidelo"
                android:layout_height="@dimen/sidelo"
                android:src="@drawable/ic_launcher"
                />
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView 
                    android:id="@+id/tv_item_am_smalltitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="啦啦啦啦啦啦啦"
                    />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView 
                        android:id="@+id/tv_item_am_position"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="文三西路118号"
                        />
                    <TextView 
                        android:id="@+id/tv_item_am_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1000.0"
                        android:textColor="@color/textcolor_orange"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
    </RelativeLayout>
	<TextView 
	    android:id="@+id/tv_itm_am_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:text="11月2日"
	    />
</LinearLayout>
