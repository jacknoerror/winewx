<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="@dimen/jack_margin_double"
    android:background="@android:color/white"
    >
    <ImageView 
        android:id="@+id/img_comment"
        android:layout_width="@dimen/sidelo"
        android:layout_height="@dimen/sidelo"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="top|center_horizontal"
        
        />

    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/jack_margin_double"
        >
        <TextView 
            android:id="@+id/tv_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户的名字"
            android:textSize="@dimen/jacktextsize_senior"
            android:textColor="@android:color/black"
            />
        <TextView 
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView 
                android:id="@+id/img_c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitStart"
                />
            <ImageView 
                android:id="@+id/img_c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher"
                android:visibility="gone"
                />
            <ImageView 
                android:id="@+id/img_c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher"
                android:visibility="gone"
                />
            <ImageView 
                android:id="@+id/img_c4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/ic_launcher"
                />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
